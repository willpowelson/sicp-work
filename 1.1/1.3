#lang sicp
(define (square x) (* x x))

(define (sumSquares x y) (+ (square x) (square y)))

(define (squareLargestTwo x y z)
  (cond
    ((and (>= x z) (>= y z) (sumSquares x y)))
    ((and (>= x y) (>= z y) (sumSquares x z)))
    (else (sumSquares y z))))
 
;tests
(= (squareLargestTwo 1 3 4) 25)
(= (squareLargestTwo 3 1 4) 25)
(= (squareLargestTwo 4 3 -20) 25)
